{
  "compileOnSave": false,
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": [
      "es2020",
      "dom"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@hubblewave/auth-guard": [
        "libs/auth-guard/src/index.ts"
      ],
      "@hubblewave/control-plane-db": [
        "libs/control-plane-db/src/index.ts"
      ],
      "@hubblewave/instance-db": [
        "libs/instance-db/src/index.ts"
      ],
      "@hubblewave/shared-types": [
        "libs/shared-types/src/index.ts"
      ],
      "@hubblewave/authorization": [
        "libs/authorization/src/index.ts"
      ],
      "@hubblewave/automation": [
        "libs/automation/src/index.ts"
      ],
      "@hubblewave/integrations": [
        "libs/integrations/src/index.ts"
      ],
      "@hubblewave/analytics": [
        "libs/analytics/src/index.ts"
      ],
      "@hubblewave/ai": [
        "libs/ai/src/index.ts"
      ],
      "@hubblewave/enterprise": [
        "libs/enterprise/src/index.ts"
      ],
      "@hubblewave/redis": [
        "libs/redis/src/index.ts"
      ],
      "@hubblewave/ui": [
        "libs/ui/src/index.ts"
      ],
      "@hubblewave/schema-engine": [
        "libs/schema-engine/src/index.ts"
      ],
      "@hubblewave/formula-parser": [
        "libs/formula-parser/src/index.ts"
      ],
      "@hubblewave/relationship-resolver": [
        "libs/relationship-resolver/src/index.ts"
      ],
      "@hubblewave/schema-validator": [
        "libs/schema-validator/src/index.ts"
      ],
      "@hubblewave/storage": [
        "libs/storage/src/index.ts"
      ],
      "@hubblewave/packs": [
        "libs/packs/src/index.ts"
      ],
      "@hubblewave/search-typesense": [
        "libs/search/typesense/src/index.ts"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}
