# JWT Configuration (REQUIRED - generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))")
JWT_SECRET=

# Encryption Key for MFA secrets (RECOMMENDED - generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
ENCRYPTION_KEY=

# Database Configuration
POSTGRES_USER=admin
POSTGRES_PASSWORD=password
POSTGRES_DB=eam_global

# Service Ports
PORT_IDENTITY=3000
PORT_METADATA=3002
PORT_DATA=3001

# MinIO Configuration
MINIO_ROOT_USER=admin
MINIO_ROOT_PASSWORD=password

# CORS / Cross-origin (comma-separated list of allowed frontend origins)
# IMPORTANT: For HttpOnly cookies to work cross-origin, origins must be explicitly listed
CORS_ORIGINS=http://localhost:4200,http://localhost:5173,http://127.0.0.1:4200,http://127.0.0.1:5173
CORS_ALLOWED_HEADERS=Content-Type, Authorization, X-Requested-With, Accept, Origin, X-Tenant-Slug

# Tenancy defaults
DEFAULT_TENANT_SLUG=acme
ALLOW_DEFAULT_TENANT_FALLBACK=true

# Refresh token cookies
USE_REFRESH_TOKEN_COOKIE=true
REFRESH_COOKIE_SAMESITE=lax
REFRESH_COOKIE_PATH=/
REFRESH_COOKIE_SECURE=false

# Account lockout settings
MAX_FAILED_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION_MINUTES=30
