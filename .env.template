# Database Configuration
PLATFORM_DB_HOST=localhost
PLATFORM_DB_PORT=5432
PLATFORM_DB_NAME=eam_global
PLATFORM_DB_USER=admin
PLATFORM_DB_PASSWORD=password

# Tenant Database Configuration
TENANT_DB_HOST=localhost
TENANT_DB_PORT=5432
TENANT_DB_USER=admin
TENANT_DB_PASSWORD=password

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Application Configuration
NODE_ENV=development
PORT=3000

# CORS / Cross-origin (comma-separated list of allowed frontend origins)
# IMPORTANT: For HttpOnly cookies to work cross-origin, origins must be explicitly listed
CORS_ORIGINS=http://localhost:4200,http://localhost:5173,http://127.0.0.1:4200,http://127.0.0.1:5173
CORS_ALLOWED_HEADERS=Content-Type, Authorization, X-Requested-With, Accept, Origin, X-Tenant-Slug

# Tenancy defaults
DEFAULT_TENANT_SLUG=acme
ALLOW_DEFAULT_TENANT_FALLBACK=true

# Refresh token cookies
USE_REFRESH_TOKEN_COOKIE=true
REFRESH_COOKIE_SAMESITE=lax
REFRESH_COOKIE_PATH=/
